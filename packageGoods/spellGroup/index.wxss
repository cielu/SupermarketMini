page{background:#f7f7f7}.header{background:linear-gradient(to bottom, #FF7700, #FF6600)}.header .nav-left{height:30px;width:150rpx;box-sizing:border-box;border-radius:30px;padding-right:8rpx;align-items:center;justify-content:space-around;background:rgba(0,0,0,0.12)}.header .line{height:16px;width:1px;background:rgba(255,255,255,0.3)}.header .loading{background:#FF6600;padding-bottom:30rpx}.topTabs{position:fixed;left:0;height:50px;width:100%;color:#fff;z-index:999;font-size:28rpx;background:#FF6600;align-items:center;box-sizing:border-box;padding:0 20rpx 10rpx 30rpx}.topTabs .moreCate{width:10%;justify-content:center}.topTabs .scroll-tabs{width:90%;height:44px;line-height:44px;white-space:nowrap}.topTabs .scroll-tabs .tab{height:100%;margin:0 10rpx;padding:0 10rpx;display:inline-block;box-sizing:border-box}.topTabs .scroll-tabs .tab-active{border-bottom:2px solid white}.content{width:100%;padding:20rpx;flex-direction:column;box-sizing:border-box}.cateTabs{color:#696969;height:auto;flex-wrap:wrap;font-size:26rpx;padding:16rpx 20rpx;box-sizing:border-box}.cateTabs .cate{height:56rpx;line-height:56rpx;margin:10rpx;padding:0 22rpx;border-radius:28rpx;min-width:fit-content;display:inline-block;vertical-align:middle;background:#f7f7f7;border:1rpx solid #f7f7f7}.cateTabs .cate-active{color:#fa781c;background:#FEF4EE;border:1rpx solid #fa781c}
